<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuvap.adma.ugcourses"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fcfcfc"
    android:id="@+id/ll">




    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:background="@color/lightgray"
                    android:layout_margin="40dp"/>
                <ImageView
                    android:id="@+id/applyico"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/bca"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Bachelor of Computer Applications (BCA)"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:background="@color/lightgray"
                    android:layout_margin="40dp"/>
                <ImageView
                    android:id="@+id/bcaico"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/bba"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Bachelor of Business Administration - Information Technology (BBA-IT)"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:background="@color/lightgray"
                    android:layout_margin="40dp"/>

                <ImageView
                    android:id="@+id/bbaico"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>




</LinearLayout>
